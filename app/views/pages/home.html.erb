<div class="container homer">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-4 mx-auto">
      <div class="card auth-card mt-4 mt-sm-6 mt-md-8">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
          <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
            <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">
              Simple, Safe, and Secure
            </h4>
          </div>
        </div>
        <div class="card-body text-center p-4">
          <p class="mb-4 text-sm text-secondary">
            Manage your assets efficiently and effectively.
          </p>
          <div class="d-grid gap-2">
            <% if user_signed_in? %>
              <%= link_to "Dashboard", dashboard_path, class: "btn bg-gradient-primary w-100" %>
            <% else %>
              <%= link_to "Sign In", new_user_session_path, class: "btn bg-gradient-primary w-100" %>
              <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-outline-primary w-100" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>