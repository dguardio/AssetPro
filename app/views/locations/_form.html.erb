<%= form_with(model: @location, local: true) do |f| %>
  <% if @location.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h4>
      <ul>
        <% @location.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row g-4">
    <div class="col-md-6">
      <div class="input-group input-group-dynamic <%= @location.name.present? ? 'is-filled' : '' %>">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Location name' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="input-group input-group-dynamic <%= @location.address.present? ? 'is-filled' : '' %>">
        <%= f.text_field :address, class: 'form-control', placeholder: 'Address' %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="input-group input-group-dynamic <%= @location.building.present? ? 'is-filled' : '' %>">
        <%= f.text_field :building, class: 'form-control', placeholder: 'Building Name' %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="input-group input-group-dynamic <%= @location.floor.present? ? 'is-filled' : '' %>">
        <%= f.text_field :floor, class: 'form-control', placeholder: 'Floor' %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="input-group input-group-dynamic <%= @location.room.present? ? 'is-filled' : '' %>">
        <%= f.text_field :room, class: 'form-control', placeholder: 'Room Number' %>
      </div>
    </div>

    <div class="col-12">
      <div class="form-check">
        <%= f.check_box :active, class: 'form-check-input' %>
        <%= f.label :active, class: 'form-check-label' %>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-end gap-3 mt-4">
    <%= link_to 'Cancel', locations_path, class: 'btn btn-dark-gray' %>
    <%= f.submit class: 'btn btn-dark' %>
  </div>
<% end %> 