<div class="table-responsive">
  <table class="table align-items-center mb-0">
    <thead>
      <tr>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">RFID Number</th>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Status</th>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Asset</th>
        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Location</th>
      </tr>
    </thead>
    <tbody>
      <% results.each do |result| %>
        <tr>
          <td>
            <div class="d-flex px-2 py-1">
              <div class="d-flex flex-column justify-content-center">
                <h6 class="mb-0 text-sm">
                  <%= result[:rfid_tag]&.rfid_number || result[:rfid_number] %>
                </h6>
              </div>
            </div>
          </td>
          <td>
            <span class="badge badge-sm bg-gradient-<%= result[:status] == :found ? 'success' : 'danger' %>">
              <%= result[:status].to_s.titleize %>
            </span>
          </td>
          <td>
            <p class="text-xs font-weight-bold mb-0">
              <%= result[:asset]&.name || 'N/A' %>
            </p>
          </td>
          <td>
            <p class="text-xs font-weight-bold mb-0">
              <%= result[:asset]&.location&.name || 'N/A' %>
            </p>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> 