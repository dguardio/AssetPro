<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Asset Tag</th>
        <th>Name</th>
        <th>Category</th>
        <th>Status</th>
        <th>Last Updated</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% assets.each do |asset| %>
        <tr>
          <td><%= asset.asset_code %></td>
          <td><%= asset.name %></td>
          <td><%= asset.category&.name %></td>
          <td>
            <span class="badge <%= status_badge_class(asset.status) %>">
              <%= asset.status&.titleize %>
            </span>
          </td>
          <td><%= asset.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td>
            <div class="btn-group">
              <%= link_to asset_path(asset), 
                  class: 'btn btn-link text-secondary mb-0' do %>
                <i class="material-icons-round">visibility</i>
              <% end %>

              <%= link_to edit_asset_path(asset), 
                  class: 'btn btn-link text-secondary mb-0' do %>
                <i class="material-icons-round">edit</i>
              <% end %>

              <%= link_to asset_path(asset), 
                  method: :delete, 
                  data: { confirm: 'Are you sure?' }, 
                  class: 'btn btn-link btn-danger text-secondary mb-0' do %>
                <i class="material-icons-round">delete</i>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if assets.empty? %>
  <div class="alert alert-info">
    No assets found at this location.
  </div>
<% end %>
