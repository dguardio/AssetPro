<main class="main-content mt-0">
  <div class="page-header align-items-start min-vh-100" style="background-image: url('https://images.unsplash.com/photo-1497294815431-9365093b7331?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1950&q=80');">
    <span class="mask bg-gradient-dark opacity-6"></span>
    <div class="container my-auto">
      <div class="row">
        <div class="col-lg-4 col-md-8 col-12 mx-auto">
          <div class="card z-index-0 fadeIn3 fadeInBottom">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Change Password</h4>
              </div>
            </div>
            <div class="card-body">
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "text-start" }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <%= f.hidden_field :reset_password_token %>

                <div class="input-group input-group-outline my-3">
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "New Password" %>
                </div>

                <div class="input-group input-group-outline mb-3">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm New Password" %>
                </div>

                <div class="text-center">
                  <%= f.submit "Change password", class: "btn bg-gradient-primary w-100 my-4 mb-2" %>
                </div>

                <%= render "devise/shared/links" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
