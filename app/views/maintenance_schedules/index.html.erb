<div class="container-fluid py-4">
  <div class="row">
    <div class="col-12">
      <div class="card my-4">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
          <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3 d-flex justify-content-between align-items-center">
            <h6 class="text-white text-capitalize ps-3 mb-0">Maintenance Schedules</h6>
            <%= link_to new_maintenance_schedule_path, class: "btn btn-success me-3" do %>
              <i class="material-icons">plus</i> New Schedule
            <% end %>
          </div>
        </div>

        <div class="card-body px-0 pb-2">
          <div class="table-responsive p-0">
            <table class="table align-items-center mb-0">
              <thead>
                <tr>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Asset</th>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Title</th>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Frequency</th>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Next Due</th>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Last Performed</th>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Status</th>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @maintenance_schedules.each do |schedule| %>
                  <tr>
                    <td>
                      <div class="d-flex px-2 py-1">
                        <div class="d-flex flex-column justify-content-center">
                          <h6 class="mb-0 text-sm"><%= schedule.asset.name %></h6>
                          <p class="text-xs text-secondary mb-0"><%= schedule.asset.asset_code %></p>
                        </div>
                      </div>
                    </td>
                    <td>
                      <p class="text-xs font-weight-bold mb-0"><%= schedule.title %></p>
                      <p class="text-xs text-secondary mb-0">
                        <%= truncate(schedule.description, length: 50) %>
                      </p>
                    </td>
                    <td>
                      <p class="text-xs font-weight-bold mb-0">
                        <%= schedule.frequency&.titleize || 'Not Set' %>
                      </p>
                    </td>
                    <td>
                      <p class="text-xs font-weight-bold mb-0">
                        <%= schedule.next_due_at&.strftime("%Y-%m-%d") || 'Not Set' %>
                      </p>
                    </td>
                    <td>
                      <p class="text-xs font-weight-bold mb-0">
                        <%= schedule.last_performed_at&.strftime("%Y-%m-%d") || 'Never' %>
                      </p>
                    </td>
                    <td>
                      <span class="badge badge-sm bg-gradient-<%= schedule.status_badge_color %>">
                        <%= schedule.status&.titleize || 'Pending' %>
                      </span>
                    </td>
                    <td class="align-middle">
                      <div class="btn-group">
                        <%= link_to maintenance_schedule_path(schedule), 
                            class: "btn btn-link text-secondary mb-0", 
                            title: "View" do %>
                          <i class="material-icons-round">visibility</i>
                        <% end %>
                        

                        <%= link_to edit_maintenance_schedule_path(schedule), 
                            class: "btn btn-link text-secondary mb-0",
                            title: "Edit" do %>
                          <i class="material-icons-round">edit</i>
                        <% end %>

                        <%= link_to maintenance_schedule_path(schedule),
                            class: "btn btn-link text-secondary mb-0",
                            data: { 
                              turbo_method: :delete,
                              turbo_confirm: "Are you sure you want to delete this maintenance schedule?"
                            },
                            title: "Delete" do %>
                          <i class="material-icons-round">delete</i>
                        <% end %>

                        <% if schedule.status != 'completed' %>
                          <%= button_to complete_maintenance_schedule_path(schedule),
                              method: :post,
                              class: "btn btn-link text-secondary mb-0",
                              title: "Complete Maintenance" do %>
                            <i class="material-icons-round">build</i>
                          <% end %>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <% if @maintenance_schedules.empty? %>
            <div class="text-center p-4">
              <p class="text-secondary mb-0">No maintenance schedules found.</p>
            </div>
          <% end %>

          <div class="d-flex justify-content-center mt-3">
            <%= paginate @maintenance_schedules %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :page_scripts do %>
  <script>
    // Initialize tooltips
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'))
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
      return new bootstrap.Tooltip(tooltipTriggerEl)
    })
  </script>
<% end %> 