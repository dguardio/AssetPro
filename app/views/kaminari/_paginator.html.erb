<%= paginator.render do %>
  <nav aria-label="Page navigation">
    <ul class="pagination">
      <li class="page-item <%= 'disabled' unless current_page.first? %>">
        <%= first_page_tag %>
      </li>
      <li class="page-item <%= 'disabled' unless current_page.first? %>">
        <%= prev_page_tag %>
      </li>

      <% each_page do |page| %>
        <li class="page-item <%= 'active' if page == current_page %>">
          <%= link_to page, url_for(page: page), class: 'page-link' %>
        </li>
      <% end %>

      <li class="page-item <%= 'disabled' unless current_page.last? %>">
        <%= next_page_tag %>
      </li>
      <li class="page-item <%= 'disabled' unless current_page.last? %>">
        <%= last_page_tag %>
      </li>
    </ul>
  </nav>
<% end %>