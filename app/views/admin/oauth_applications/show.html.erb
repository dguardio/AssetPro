<div class="container-fluid py-4">
  <div class="row">
    <div class="col-12">
      <div class="card my-4">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
          <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
            <div class="d-flex justify-content-between align-items-center">
              <h6 class="text-white text-capitalize ps-3">API Application Details</h6>
              <div class="pe-3">
                <%= link_to edit_admin_oauth_application_path(@application), class: "btn btn-sm bg-gradient-dark mb-0" do %>
                  <i class="material-icons text-sm">edit</i>&nbsp;&nbsp;Edit
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <div class="card-body px-0 pb-2">
          <div class="container">
            <div class="row">
              <div class="col-md-6">
                <div class="mb-4">
                  <h6 class="text-uppercase text-secondary text-xxs font-weight-bolder">Name</h6>
                  <p class="text-lg mb-0"><%= @application.name %></p>
                </div>

                <div class="mb-4">
                  <h6 class="text-uppercase text-secondary text-xxs font-weight-bolder">Organization</h6>
                  <p class="text-lg mb-0"><%= @application.organization_name %></p>
                </div>

                <div class="mb-4">
                  <h6 class="text-uppercase text-secondary text-xxs font-weight-bolder">Sub-Organization</h6>
                  <p class="text-lg mb-0"><%= @application.sub_organization_name %></p>
                </div>

                <div class="mb-4">
                  <h6 class="text-uppercase text-secondary text-xxs font-weight-bolder">Application Type</h6>
                  <p class="text-lg mb-0"><%= @application.app_type&.humanize %></p>
                </div>

                <div class="mb-4">
                  <h6 class="text-uppercase text-secondary text-xxs font-weight-bolder">Client ID</h6>
                  <div class="d-flex align-items-center gap-2">
                    <p class="text-lg mb-0"><%= @application.uid %></p>
                    <button class="btn btn-link btn-sm p-0" onclick="copyToClipboard('<%= @application.uid %>')" data-bs-toggle="tooltip" title="Copy to clipboard">
                      <i class="material-icons">content_copy</i>
                    </button>
                  </div>
                </div>

                <div class="mb-4">
                  <h6 class="text-uppercase text-secondary text-xxs font-weight-bolder">Client Secret</h6>
                  <div class="d-flex align-items-center gap-2">
                    <p class="text-lg mb-0"><%= @application.secret %></p>
                    <button class="btn btn-link btn-sm p-0" onclick="copyToClipboard('<%= @application.secret %>')" data-bs-toggle="tooltip" title="Copy to clipboard">
                      <i class="material-icons">content_copy</i>
                    </button>
                  </div>
                </div>

                <div class="mb-4">
                  <h6 class="text-uppercase text-secondary text-xxs font-weight-bolder">Scopes</h6>
                  <p class="text-lg mb-0"><%= @application.scopes %></p>
                </div>

                <div class="mb-4">
                  <h6 class="text-uppercase text-secondary text-xxs font-weight-bolder">Confidential</h6>
                  <span class="badge badge-sm bg-gradient-<%= @application.confidential? ? 'success' : 'secondary' %>">
                    <%= @application.confidential? ? 'Yes' : 'No' %>
                  </span>
                </div>
              </div>
            </div>

            <!-- Connected Readers -->
            <div class="row mt-4">
              <div class="col-12">
                <h6 class="text-uppercase text-secondary text-xxs font-weight-bolder mb-3">Connected Readers</h6>
                <div class="table-responsive">
                  <table class="table align-items-center mb-0">
                    <thead>
                      <tr>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Reader ID</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Name</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Position</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Status</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Last Active</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @readers.each do |reader| %>
                        <tr>
                          <td><%= reader.reader_id %></td>
                          <td><%= reader.name %></td>
                          <td><%= reader.position %></td>
                          <td>
                            <span class="badge badge-sm bg-gradient-<%= reader.active? ? 'success' : 'secondary' %>">
                              <%= reader.active? ? 'Active' : 'Inactive' %>
                            </span>
                          </td>
                          <td><%= time_ago_in_words(reader.last_ping_at) if reader.last_ping_at %> ago</td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

            <!-- Recent Scans -->
            <div class="row mt-4">
              <div class="col-12">
                <h6 class="text-uppercase text-secondary text-xxs font-weight-bolder mb-3">Recent Scans</h6>
                <div class="table-responsive">
                  <table class="table align-items-center mb-0">
                    <thead>
                      <tr>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Time</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Asset</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Reader</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Event</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @recent_scans.each do |scan| %>
                        <tr>
                          <td><%= time_ago_in_words(scan.created_at) %> ago</td>
                          <td><%= scan.asset.name %></td>
                          <td><%= scan.scanned_by_device&.name %></td>
                          <td><%= scan.event_type&.humanize %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script>
    function copyToClipboard(text) {
      navigator.clipboard.writeText(text).then(function() {
        const tooltip = bootstrap.Tooltip.getInstance('[data-bs-toggle="tooltip"]');
        tooltip.setContent({ '.tooltip-inner': 'Copied!' });
        setTimeout(() => {
          tooltip.setContent({ '.tooltip-inner': 'Copy to clipboard' });
        }, 1000);
      });
    }

    document.addEventListener('DOMContentLoaded', function() {
      var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
      tooltipTriggerList.map(function(tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
      });
    });
  </script>
<% end %> 