<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">Edit User</h4>
    <div class="d-flex gap-3">
      <%= link_to admin_users_path, class: 'btn bg-gradient-dark mb-0' do %>
        <i class="material-icons-round text-sm">arrow_back</i>&nbsp;Back to Users
      <% end %>
      <%= link_to new_admin_user_path, class: 'btn bg-gradient-dark mb-0' do %>
        <i class="material-icons-round text-sm">add</i>&nbsp;New User
      <% end %>      
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <%= render 'form', user: @user %>
    </div>
  </div>
</div> 