<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">Account Status History</h4>
    <div class="d-flex gap-3">
      <%= link_to admin_users_path, class: 'btn bg-gradient-dark mb-0' do %>
        <i class="material-icons-round text-sm">arrow_back</i>&nbsp;Back to Users
      <% end %>
    </div>
  </div>

  <div class="card">
    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
      <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
        <h6 class="text-white text-capitalize ps-3">Status Changes for <%= @user.email %></h6>
      </div>
    </div>
    <div class="card-body px-0 pb-2">
      <div class="table-responsive p-0">
        <table class="table align-items-center mb-0">
          <thead>
            <tr>
              <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date</th>
              <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Changed By</th>
              <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">From</th>
              <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">To</th>
              <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Reason</th>
            </tr>
          </thead>
          <tbody>
            <% @status_logs.each do |log| %>
              <tr>
                <td>
                  <div class="d-flex px-2 py-1">
                    <div class="d-flex flex-column justify-content-center">
                      <h6 class="mb-0 text-sm"><%= log.created_at.strftime("%Y-%m-%d %H:%M") %></h6>
                    </div>
                  </div>
                </td>
                <td>
                  <p class="text-xs font-weight-bold mb-0"><%= log.changed_by.email %></p>
                </td>
                <td>
                  <span class="badge badge-sm bg-gradient-<%= log.status_from ? 'success' : 'danger' %>">
                    <%= log.status_from ? 'Active' : 'Inactive' %>
                  </span>
                </td>
                <td>
                  <span class="badge badge-sm bg-gradient-<%= log.status_to ? 'success' : 'danger' %>">
                    <%= log.status_to ? 'Unlocked' : 'Locked' %>
                  </span>
                </td>
                <td>
                  <p class="text-xs font-weight-bold mb-0"><%= log.reason %></p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div> 