<div class="container">
  <h2>Audit Logs</h2>

  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>User</th>
        <th>Action</th>
        <th>Record Type</th>
        <th>Record ID</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% @audit_logs.each do |log| %>
        <tr>
          <td><%= log.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          <td><%= log.user&.email || 'System' %></td>
          <td><%= log.action.titleize %></td>
          <td><%= log.auditable_type %></td>
          <td><%= log.auditable_id %></td>
          <td><%= link_to 'View Details', audit_log_path(log) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @audit_logs %>
</div> 